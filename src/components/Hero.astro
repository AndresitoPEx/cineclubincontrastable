---
// Hero Section Component for Cine Club Incontrastable
import { Image } from 'astro:assets';

// Datos para las características destacadas
const features = [
  {
    icon: "M7 4v16M17 4v16M3 8h18M3 16h18",
    title: "Próximas Proyecciones",
    description: "Descubre las películas que proyectaremos próximamente en nuestras salas exclusivas.",
    link: "/programacion"
  },
  {
    icon: "M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z",
    title: "Eventos Especiales",
    description: "Participa en nuestros eventos y actividades exclusivas para amantes del cine.",
    link: "/eventos"
  },
  {
    icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
    title: "Hazte Miembro",
    description: "Únete al club y disfruta de beneficios exclusivos como entradas anticipadas y descuentos.",
    link: "/membresia"
  }
];
---

<section class="relative overflow-hidden">
  <!-- Fondo con overlay de gradiente -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-black opacity-60 z-10"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-primary/90 to-secondary/90 mix-blend-multiply z-20"></div>
    <div class="absolute inset-0 backdrop-blur-sm z-30"></div>
    
    <!-- Patrón de fondo con íconos de cine -->
    <div class="absolute inset-0 opacity-5 z-0">
      <div class="grid grid-cols-6 gap-4 p-4">
        {Array(24).fill(0).map((_, i) => (
          <div class="flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={i % 3 === 0 
                ? "M7 4v16M17 4v16M3 8h18M3 16h18" 
                : i % 3 === 1 
                ? "M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14v-4z" 
                : "M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945"} />
            </svg>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Contenido principal -->
  <div class="relative z-40 py-20 md:py-28">
    <div class="container mx-auto px-4">
      <!-- Encabezado con animación -->
      <div class="max-w-4xl mx-auto text-center mb-16">
        <div class="inline-block mb-4 bg-white/10 backdrop-blur-md px-6 py-2 rounded-full">
          <span class="text-amber-300 font-medium">Desde 2025 • Huancayo, Perú</span>
        </div>
        
        <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white">
          <span class="inline-block animate-fade-in [animation-delay:0.2s] opacity-0">Cine</span>
          <span class="inline-block animate-fade-in [animation-delay:0.4s] opacity-0"> Club</span>
          <span class="inline-block animate-fade-in [animation-delay:0.6s] opacity-0 bg-clip-text text-transparent bg-gradient-to-r from-amber-300 to-amber-500"> Incontrastable</span>
        </h1>
        
        <p class="text-xl md:text-2xl mb-8 text-white/90 animate-fade-in [animation-delay:0.8s] opacity-0">
          Únete a nosotros para disfrutar de las mejores películas y compartir tu pasión por el cine.
        </p>
        
        <!-- Botones de acción -->
        <div class="flex flex-wrap justify-center gap-4 animate-fade-in [animation-delay:1s] opacity-0">
          <a href="/programacion" class="bg-amber-400 hover:bg-amber-500 text-gray-900 font-medium px-8 py-3 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-lg">
            Ver Programación
          </a>
          <a href="/membresia" class="bg-white/10 hover:bg-white/20 text-white font-medium px-8 py-3 rounded-lg transition-all duration-300 backdrop-blur-sm">
            Hazte Miembro
          </a>
        </div>
      </div>
      
      <!-- Tarjetas de características -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-8">
        {features.map((feature, index) => (
          <div class="group relative bg-white/10 backdrop-blur-sm p-8 rounded-xl shadow-xl overflow-hidden transition-all duration-500 hover:bg-white/15 hover:shadow-2xl animate-fade-in [animation-delay:1.2s] opacity-0">
            <!-- Efecto de brillo en hover -->
            <div class="absolute -inset-1 bg-gradient-to-r from-amber-300 to-amber-500 rounded-xl blur opacity-0 group-hover:opacity-20 transition-all duration-500"></div>
            
            <!-- Contenido de la tarjeta -->
            <div class="relative z-10">
              <div class="mb-4 text-amber-300 transition-all duration-300 group-hover:scale-110 group-hover:text-amber-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon} />
                </svg>
              </div>
              
              <h2 class="text-2xl font-semibold mb-4 text-white">{feature.title}</h2>
              <p class="text-gray-200 mb-6">{feature.description}</p>
              
              <a href={feature.link} class="inline-flex items-center text-amber-300 hover:text-amber-400 transition-colors duration-300">
                <span class="mr-2">Saber más</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Estadísticas -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-16 bg-white/5 backdrop-blur-sm p-6 rounded-xl animate-fade-in [animation-delay:1.4s] opacity-0">
        {[
          { value: "10+", label: "Años de experiencia" },
          { value: "200+", label: "Películas proyectadas" },
          { value: "1500+", label: "Miembros activos" },
          { value: "50+", label: "Eventos especiales al año" }
        ].map(stat => (
          <div class="text-center p-4">
            <div class="text-3xl md:text-4xl font-bold text-amber-300 mb-2">{stat.value}</div>
            <div class="text-sm text-gray-300">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
  
  <!-- Decoración inferior -->
  <div class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-t from-black/50 to-transparent z-40"></div>
</section>

<style>
  @keyframes fadeIn {
    0% { opacity: 0; transform: translateY(10px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }
</style>

